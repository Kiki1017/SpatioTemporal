%new commands that warns for computationally intensive code
\newcommand{\warnCode}{{ \vspace{-\baselineskip}\subsubsection*{WARNING: The following steps are time-consuming.}\vspace{-\baselineskip} }}
%and provides alternatives
\newcommand{\altCode}{{ \vspace{-1.5\baselineskip}\subsubsection*{ALTERNATIVE: Load pre-computed results.}\vspace{-\baselineskip} }}
%and a statment marking the end of the options
\newcommand{\altEnd}{{ \vspace{-1.5\baselineskip}\subsubsection*{End of alternative}}}

